align: start;\n            p{\n                text-transform: uppercase;\n                font-family: \"OpenSans SemiBold\";\n            }\n            \n            .current-option{\n                position: relative;\n                background-color: #2e63ff;\n                max-width:350px;\n                padding:20px 30px 20px 30px;\n                border-radius: 4px;\n                overflow: hidden;\n                p{\n                    font-size:30px;\n                    font-family: \"OpenSans ExtraBold\";\n                }\n                select{\n                    padding:8px;\n                    font-family: \"OpenSans SemiBold\";\n                    border-radius: 2px;\n                    border:none;\n                }\n                .background-text{\n                    position: absolute;\n                    font-size: 45px;\n                    right: -17px;\n                    bottom: -34px;\n                    opacity: 0.1;\n                }\n            }\n            \n\n\n        }\n\n        .service-options{\n            \n            .option-header{\n                p{\n                    text-transform: uppercase;\n                    font-family: \"OpenSans SemiBold\";\n                    margin-bottom: 10px;\n                }\n                .question{\n                    font-size:12px;\n                    font-family: \"OpenSans\";\n                }\n                text-align: start;\n                display: flex;\n                justify-content: space-between;\n                align-items: center;\n                button{\n                    border:none;\n                    outline:none;\n                    padding:5px 20px;\n                    border-radius: 2px;\n                    font-size: 16px;\n                    font-family: \"OpenSans SemiBold\";\n                    \n                }\n            }    \n            \n            .option-items{\n                display: grid;\n     